/***** 1. GLOBAL SETTINGS *****/

// location of the .plib files
define('LIBDIR', '@AIRT_PHPDIR@');

// location of configuration files
define('ETCDIR', '@ETCDIR@');

// number of incidents to show on one page
define('PAGESIZE', 20);

// directory for short-lived temporary files
define('TMPDIR','/tmp');


/**** 2. EMAIL SETTINGS *****/
// sender-from in standard emails. 
// If left empty, the email address of the currently logged in AIRT 
// use will be used. 
define('MAILFROM', 'Example-CERT - @YOURFIRSTNAME@ <user@example.com>');

// Any mail sent from this sysstem will have the following envelope sender.
// Note: dont leave this empty, or you will get the userid of the owner of
// your web server process. Only use an email address here, dont add a name.
define('MAILENVFROM', 'user@example.com');

// this email address will always be cc'ed on outgoing messages. 
// If left empty, no cc's of standard messages will be sent.
define('MAILCC', 'user@example.com');

// reply-to used in standard emails. 
// If left empty, no replyto header will be set.
define('REPLYTO', 'Example-CERT - @YOURFIRSTNAME@ <user@example.com>');


/***** 3. DATABASE SETTINGS *****/
// connect string for the database
define('DBDB', 'airt');
define('DBUSER', 'airt');
define('DBPASSWD', '**********');        // <--- CHANGE THIS


/***** 4. GPG SETTINGS *****/
/* To make this work, generate a gnupg key according to the instructions in
 * section 4.14 of the GnuPG FAQ (http://www.gnupg.org) and copy it to a
 * directory in which the web server has write access. Make sure that your key
 * rings (pubkey.gpg and secring.gpg) are readable by the web server, but not
 * writable. Also, keep the directory with the keys OUTSIDE YOUR DOCUMENT
 * SPACE. The directory containing your keys will be referred to as the
 * GPG_HOMEDIR.
 */
define('GPG_BIN', '/usr/bin/gpg');
define('GPG_HOMEDIR', '/usr/local/share/airt/key');
define('GPG_OPTIONS', '--detach-sign -t --armor --batch');
// define('GPG_KEYID', '8830B66F');


/***** 5. SITE CUSTOMIZATION *****/
// the session timeout in seconds
define('SESSION_TIMEOUT', 600);

// Incident ID prefix
define('INCIDENTID_PREFIX', 'Example-CERT#');

// local customization can be found in this file. If undefined, no local
// additions are done
define('CUSTOM_FUNCTIONS', '@ETCPATH@/customfunctions.plib');

