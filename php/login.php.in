$public=1;
require_once 'config.plib';
require_once LIBDIR."/authentication.plib";
require_once LIBDIR."/airt.plib";

if (array_key_exists('action', $_REQUEST)) {
   $action=$_REQUEST['action'];
} else {
   $action = "none";
}

switch ($action) {
   case "none":
      pageHeader("AIRT login page");
      $out = t("<form method=\"POST\">\n");
      $out .= t("<table>\n");
      $out .= t("<tr>\n");
      $out .= t("   <td>Login</td>\n");
      $out .= t("    <td><input type=\"text\" name=\"login\" size=\"25\"></td>\n");
      $out .= t("</tr>\n");
      $out .= t("<tr>\n");
      $out .= t("   <td>Password</td>\n");
      $out .= t("   <td><input type=\"password\"  name=\"password\" size=\"25\"></td>\n");
      $out .= t("</tr>\n");
      $out .= t("</table>\n");
      print $out;

		generateEvent('loginscreen');

      $out = t("<p><input type=\"hidden\" name=\"action\" value=\"check\">\n");
      $out .= t("<input type=\"submit\" value=\"Login\">");
      $out .= t("</form></p>\n");
      
      $out .= t("<HR/>");
      $out .= t("<BLOCKQUOTE><small>");
      $out .= t("AIRT version @VERSION@, Copyright (C) 2004-2005 Tilburg University ");
      $out .= t("&lt;<a href=\"mailto:airt-dev@uvt.nl\">airt-dev@uvt.nl</a>&gt;<BR/>\n");
      $out .= t("AIRT comes with ABSOLUTELY NO WARRANTY; for details ");
      $out .= t("<a href=\"license.php\">click here</a>.<BR/>\n");
      $out .= t("This is free software, and you are welcome to redistribute it");
      $out .= t("under certain conditions; See the license for more details.\n");
      $out .= t("</small></BLOCKQUOTE>");

      print $out;
    break;

    case "check":
       if (array_key_exists("login", $_REQUEST)) {
          $login = $_REQUEST["login"];
       } else {
          airt_error("PARAM_MISSING", "login.php:".__LINE__);
          Header("Location: .");
          break;
       }

        // password must be HTTP post
        if (array_key_exists("password", $_POST)) {
            $password = $_POST["password"];
        } else {
          airt_error("PARAM_MISSING", "login.php:".__LINE__);
          Header("Location: .");
          break;
        }

        $userid = airt_authenticate($login, $password);
        if ($userid == -1) {
            pageHeader("Permission denied.");
            print t("Username and/or password incorrect.");
			   airt_invalidCredentials();
            pageFooter();
			   exit();
		  }

		  airt_initSession($userid);
        break;

    default:
        die("Unknown action.");
} // switch
?>
