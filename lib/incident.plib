   $output = '<table>'.LF;
   $output .= '  <tr>'.LF;
   $output .= '    <td>'._('Incident type').'</td>'.LF;
   $output .= '    <td>'.getIncidentTypeSelection('type', $type).'</td>'.LF;
   $output .= '  </tr>'.LF;
