      FROM   incident_states
      WHERE  id=\'%id\'', array('%id'=>$id)));
   if ($res == false) {
      return _('unknown');
   }

   if (db_num_rows($res)) {
      $row = db_fetch_next($res);
      $out = $row['label'];
   } else {
      $out = _('unknown');
   }

   return $out;
}

