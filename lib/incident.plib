 */
function removeUserfromIncident($userid, $incident) {
   generateEvent('incidentdeluser', array(
      'incidentid' => $incident,
      'userid' => $userid
   ));

   $res = db_query(q('
      DELETE FROM incident_users
      WHERE userid=%userid
      AND   incidentid=%incidentid', array(
         '%userid'=>db_masq_null($userid),
         '%incidentid'=>db_masq_null($incident))));
