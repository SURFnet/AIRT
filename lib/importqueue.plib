         $out .= t("  <td>%type</td>\n", array('%type'=>$element['type']));
         $out .= t("  <td>%cons</td>\n", array('%cons'=>$element['cache_constituency']));
         $out .= t("  <td>%ip</td>\n", array('%ip'=>$element['cache_ip']));
         $out .= t('  <td><a target="airt_queue" title="'.
            _('Show incident details in new browser window').
            ' href="%url?action=showdetails&id=%id">'.
            _('details').'</a></td>'.LF,
            array('%url'=>$_SERVER['PHP_SELF'], '%id'=>$id));;
         $out .= '   <td>'.LF;
