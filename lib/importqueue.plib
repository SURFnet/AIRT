   $out .= '</tr>'.LF;
   $out .= '<th></th>'.LF;
   foreach ($elements as $id=>$element) {
      $item = queuePeekItem($id,$error);
      if ($error != '') {
         airt_error('ERR_FUNC', 'importqueue.plib:'.__LINE__);
         return;
      }
      if ($element['cache_mailtemplate'] == '') {
         $element['cache_mailtemplate'] =_('No preferred template');
